@model Entity.MarcaVehiculoEntity



    <div class="container">

        <div class="card">
            <div class="card-header">
                @(Model.MarcaVehiculoId.HasValue ? "Actualizar" : "Nuevo")
            </div>
            <div class="card-body">
               
                <form method="post" asp-action="Save">
                    <input type="hidden" asp-for="MarcaVehiculoId" />

                    <div class="form-group mb-3">
                        <label for="Descripcion" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" asp-for="Descripcion" maxlength="250" required>
                    </div>


                    <div class="form-group form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Estado" value="true">
                        <label class="form-check-label" for="Estado">
                           Estado
                        </label>
                    </div>


                    <div class="row">
                        <div class="col-4">
                            <button type="submit" class="btn btn-outline-primary">
                                @(Model.MarcaVehiculoId.HasValue ? "Actualizar" : "Agregar")
                       
                            </button>

                        </div>
                    </div>

                </form>


            </div>
        </div>

    </div>
